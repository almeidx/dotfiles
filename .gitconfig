[user]
	name = almeidx
	email = almeidx@pm.me
	signingKey = C5FF0C40763546C5

[commit]
	gpgSign = true

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[credential]
	helper = store

[alias]
	ci = commit -m
	co = checkout
	cm = checkout main
	cb = checkout -b
	st = status -sb
	sf = show --name-only
	lg = log --pretty=format:'%Cred%h%Creset %C(bold)%cr%Creset %Cgreen<%an>%Creset %s' --max-count=30
	incoming = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' ..@{u})
	outgoing = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' @{u}..)
	unstage = reset HEAD --
	undo = checkout --
	rb = reset --soft HEAD~1
	committers = !(git log | grep Author | sort | uniq -c | sort -n -r)
	clean = git clean -df
	resign = "!f() { git rebase --exec 'git commit --amend --no-edit -n -S' -i $1; }; f"
	resignlast = "rebase --exec 'git commit --amend --no-edit -n -S'"
	rename = "!sh -c 'git branch -m `git rev-parse --abbrev-ref HEAD` $1'"
	amend = commit --amend --no-edit -m
	cim = "!sh -c 'git commit -m \"`curl http://whatthecommit.com/index.txt`\"'"
	cimc = "!sh -c 'git commit -m \"chore: `curl http://whatthecommit.com/index.txt`\"'"

